<%= content_for :title do %>
  <%= t "page.front-end.users.title" %>
<% end %>

<%= content_for :page_title do %>
  <%= t "page.front-end.users.page_title" %>
<% end %>
<div class="row">
  <div class="user_profile col-md-4">
    <%= render "follow_form" if logged_in? %>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <%= image_tag @user.avatar.url, size: Settings.image.size if @user.avatar? %>
    <p>
      <strong><%= t "user_attr.name" %></strong>
      <%= @user.name %>
    </p>
    <p>
      <strong><%= t "user_attr.email" %></strong>
      <%= @user.email %>
    </p>
    <%= link_to t("userLink.edit"), edit_user_path(@user) %>
    <%= link_to t("userLink.back"), users_path %>
  </div>
  <div class = "col-md-8">
    <ul class="user_process">
      <%= render @activities %>
    </ul>
  </div>
</div>
